@{
    ViewData["Title"] = "Dashboard";

}

<h1>Dashboard</h1>

<div class="dashboard">
    <h1>Dashboard</h1>

    <div style="width: 600px; margin: 0 auto;">
        <canvas id="myBarChart"></canvas>
    </div>

    <script>
        // Get data from the model
        const labels = @Html.Raw(Json.Serialize(Model.Labels));
        const values = @Html.Raw(Json.Serialize(Model.Values));

        // Chart.js bar chart setup
        const ctx = document.getElementById('myBarChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Performance Metrics',
                    data: values,
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

</div>

